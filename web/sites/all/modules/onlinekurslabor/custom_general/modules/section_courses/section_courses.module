 * @return String active course
 */
function _section_course_create_register_active_course(){
    $active_course = NULL;
    
    if (arg(0) == 'system' && arg(1) == 'ajax') {
      $referer_url = drupal_parse_url($_SERVER['HTTP_REFERER']);
      $referer_url['path'] = substr(parse_url($referer_url['path'], PHP_URL_PATH), 1);
      if (arg(0, $referer_url['path']) == 'course' && arg(1, $referer_url['path']) == 'admin') {
        $active_course = node_load(arg(2, $referer_url['path']));
      }
    }
    else {
      //assign user to active group
      $active_course = _section_courses_get_active_course();
    }
    
    return $active_course;
}
/**
 * Looks up user and reeturns the state of the account
 * 
 * @param array   $userdata        Array containing the user information
 * 
 * @return String State of the account                   
 */
function _section_course_get_user_info_assign_course($userdata){
    $acc            = user_load_by_mail($userdata['email']);
    $member         = False;
    $user_already   = False;
    $user_state     = 'NONE';
    //$active_course  = get_active_course();
      if ($acc) {
        $active_course  = _section_course_create_register_active_course();
        //account activation, if account has not been activated yet
        if (!$acc->status) {
          //activate
          $acc->status  = 1;
          //add role
          $role         = user_role_load_by_name(NM_ROLE_STUDENT);
          $acc->roles   = array($role->rid => $role->name);
          // save changes
          user_save($acc);
        }
        if (og_is_member('node', $active_course->nid, 'user', $acc, array(OG_STATE_ACTIVE))) {
          //already member
          $user_state   = 'ALREADY_IN'; 
          $member       = True;
        }
        else {
           $user_state   = 'SUCCESS';
          $user_already = True;
        }
      }
      // No account found
      else {
        if (!$userdata['first_name']) {
          // fill missing account array for status message, or create accounts
           $user_state   = 'MISSING';
           return $user_state;
        }
        else {
          //add user
          $role = user_role_load_by_name(NM_ROLE_STUDENT);
          $edit = array(
            'name' => $userdata['first_name'] . ' ' . $userdata['last_name'],
            'pass' => user_password(),
            'mail' => $userdata['email'],
            'init' => $userdata['email'],
            'status' => 1,
            'access' => REQUEST_TIME,
            'roles' => array($role->rid => $role->name),
          );

          //increment until we get an unused user name
          $count = 1;
          $user_name = $edit['name'];
          while (user_load_by_name($user_name)) {
            $user_name = $edit['name'] . ' ' . $count++;
          }
          $edit['name'] = $user_name;

          //save and notify the user
          $acc = user_save(drupal_anonymous_user(), $edit);

          if (!$acc) {
            drupal_set_message("Account konnte nicht gespeichert werden.", 'error');
            return;
          }
          $active_course  = _section_course_create_register_active_course();
          //student profile
          $profile2 = profile2_create(array('type' => 'student'));
          $profile2->setUser($acc);
          profile2_save($profile2);
          //Populate profile fields
          $wrapper = entity_metadata_wrapper('profile2', $profile2->pid);
          //master profile
          $profile2 = profile2_create(array('type' => 'master'));
          $profile2->setUser($acc);
          profile2_save($profile2);
          //Populate profile fields
          $wrapper = entity_metadata_wrapper('profile2', $profile2->pid);
          $wrapper->field_first_name->set($userdata['first_name']);
          $wrapper->field_last_name->set($userdata['last_name']);
          $wrapper->save();
          realname_update($acc);
          $account = user_load($acc->uid, TRUE);
          //Notification. we need the realname first!
          // Set operation.
          $op = 'register_no_approval_required';
          // Send an email.
          _user_mail_notify($op, $acc);
      }
    }
    // add to group

    if(!$member){
      $values = array(
          'entity type' => 'user',
          'entity' => $acc,
      );
        og_group('node', $active_course->nid, $values);
        if(!$user_already){
        drupal_set_message('Student ' . $edit['name'] . ' wurde angelegt.');
        }
    }
    
    return $user_state;
}
/**
 * Takes input from Form-Field and extracts user data from it.
 * Valid users will be added to the course:
 * 
 *      e.g. Billy@billmail.com
 * 
 * New Users will be created and added:
 * 
 *      e.g. Billy Bafög Billy@billmail.com
 * 
 * @return HTML-DIV containing the proper course entrance information(success, failure, etc)
 */
function _section_courses_student_registration_import($input) {

  $input = check_plain($input);
  
  if (!empty($input)) {
    watchdog('section_courses', 'Importing user list %input', array('%input' => $input), WATCHDOG_INFO);

    //email list = account activation
    //first + lastname; emaillist =  account creation!
    //$emails             = array();
    $rows_data          = array();
    $users              = array();
    $user_parameters    = 0;
    $success            = array();
    $already_in         = array();
    $missing_accounts   = array();

    // Split input into rows representing users
    $rows = explode("\n", $input);

    foreach ($rows as $row) {
        // Count Parameters given
        $row = html_entity_decode($row, ENT_QUOTES);
        
        
        //apply any string- and character-replacement here
        $row = preg_replace("/[\t\",:;￼]/", " ", $row);
        $user_parameters    = count(explode(" ", $row));
        // Create New User  
        if($user_parameters > 1){
            // Decode HTML-safe data
            $row = ucfirst($row);
            // Email Pattern
            preg_match( '/[a-zäöüÄÖßÜA-Z]+[a-zA-ZäöüÄßÖÜ0-9+\.\-_]*[@]{1}[a-zA-Z0-9äößüÄÖÜ\.\-+_]*[\.]{1}[\.a-zäöüÄÖßÜA-Z0-9]*/', $row, $email_matches);
            // Remove Email from Input, leaving only names
            $name_without_mail = str_replace($email_matches[0], "", $row);
            $names = trim($name_without_mail);
            // Cut Names @ whitespace
            //var_dump($row);
            $names                = explode(" ", $names);
            // Replace Character not beloning in names
            $names                = preg_replace("/[0-9\^\%\",;]/", "", $names);
            $names = array_values(array_filter(preg_replace( '/[a-zäöüÄÖßÜA-Z]+[a-zA-ZäöüÄßÖÜ0-9+\.\-_]*[@]{1}[a-zA-Z0-9äößüÄÖÜ\.\-+_]*[\.]{1}[\.a-zäöüÄÖßÜA-Z0-9]*/',"", $names )));
            // Extracting 1st & last name
            $first_name           = implode(' ', array_slice($names, 0, -1));
            $last_name            = end($names);
            $data['first_name']   = $first_name;
            $data['last_name']    = $last_name;
            $data['email']        = $email_matches[0];
            $rows_data[$data['email']] = $data;
        }
        // Add existing User
        else{
            $data['email'] = $row;
            $rows_data[$data['email']] = $data;
        }
    }


    foreach($rows_data as $email => $userdata) {
      if (empty($email)) {
        //ignore empty lines
        continue;
      }
      
      $user_state = _section_course_get_user_info_assign_course($userdata);
      
      switch($user_state){
            case 'MISSING':
                $missing_accounts[] = $email;
                break;
            case 'SUCCESS':
                $success[] = $email;
                break;
            case 'ALREADY_IN':
                $already_in[] = $email;
                break;
            default:
                break;
      }
    }
    $output = '';
    
    //missing
    if ($missing_accounts) {
      $output .= '<div class="alert alert-error"><h3>Kein Account vorhanden</h3><h5>Für folgende Einträge</h5>' . '<ol style="padding:0 0 0 25px;margin:0;margin-bottom: 20px;"><li>' . implode('</li><li>', $missing_accounts) . "</li>" . '</ol></div>';
    }
    //already in
    if ($already_in) {
      $output .= '<div class="alert alert-warning"><h3>Bereits im Kurs</h3><h5>Für folgende Einträge</h5>' . '<ol style="padding:0 0 0 25px;margin:0;margin-bottom: 20px;"><li>' . implode('</li><li>', $already_in) . "</li>" . '</ol></div>';
    }
    //successfully addded
    if ($success) {
      $output .= '<div class="alert alert-success"><h3>Erfolgreich hinzugefügt</h3><h5>Für folgende Einträge</h5>' . '<ol style="padding:0 0 0 25px;margin:0;margin-bottom: 20px;"><li>' . implode('</li><li>', $success) . "</li>" . '</ol></div>';
    }
  }
  return $output;
}
    

