  if ($result = _linkit_result_from_url($search, $enabled_plugins)) {
    $results = array($result);
  }
  elseif (!$results = _section_content_tasks_autocomplete_search($search, $enabled_plugins)) {
    $results = array(array(
        'title' => t('No results'),
        'addClass' => 'status-notice',
        'disabled' => TRUE,
    ));
  }
  drupal_json_output($results);
  drupal_exit();
