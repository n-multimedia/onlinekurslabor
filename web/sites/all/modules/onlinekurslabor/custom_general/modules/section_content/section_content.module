function section_content_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  if (!$items) {
    return;
  }
  $blacklist_filenime = array('video/oembed');

  $element = array();
  $settings = $display['settings'];

  switch ($display['type']) {
    case 'double_field_mc_answers':
      foreach ($items as $delta => $item) {
        $element[$delta] = array(
          '#display' => $display,
          '#item' => $item,
          '#theme' => 'multiple_choice_field',
        );
      }
      break;
    case 'okl_badge_domain_visibility':
      $is_readable_for_authors = false;
      if (!empty($entity->group_access)) {
        $is_readable_for_authors = $entity->group_access[LANGUAGE_NONE][0]['value'] === "0";
      }
      foreach ($items as $delta => $item) {


        if ($is_readable_for_authors) {
          $element[$delta] = array('#type' => 'html_tag',
            '#tag' => 'span',
            '#attributes' => array(
              'class' => 'badge-info badge', 'title' => t('All autors can read the text')
            ),
            '#value' => t('Read access'));
        }
        else {
          $element[$delta] = array('#type' => 'html_tag',
            '#tag' => 'span',
            '#attributes' => array(
              'class' => 'badge-secondary badge', 'title' => t('Read and write access only for confirmed group members')
            ),
            '#value' => t('limited'));
        }
      }
      break;
    case 'section_content_formatter_video_preview':
      // Use the media_thumbnail image style so that the output in media browser
      // is consistent.

      // Prevent 'empty' fields from causing a WSOD.
      $items = array_filter($items);
      $is_wysiwyg_preview = false;
      if(!empty($items[0]['override']['wysiwyg']))
      {
          $is_wysiwyg_preview = true;
      }
      // Build an array of sources for each <video> element.
      $source_lists = array();

        foreach ($items as $delta => $item) {
          if ($item['type'] == 'video'  && !in_array($item['filemime'], $blacklist_filenime)) {
            $source_lists[0][] = $item;
          }
        }


      // Render each source list as an image
      foreach ($source_lists as $delta => $sources) {
        $element[$delta] = array(
          '#theme' => 'section_content_formatter_video_preview',
          '#files' => $sources,
          '#is_wysiwyg_preview' => $is_wysiwyg_preview,
          '#image_width' => $settings['image_width'],
     #       '#markup'=>theme('section_content_formatter_video_preview', array('#files' => $sources,    'is_wysiwyg_preview' => $is_wysiwyg_preview))
        );
      }
      break;
    case 'section_content_formatter_video':
      // Use the media_thumbnail image style so that the output in media browser
      // is consistent.
      $multiple_file_behavior = $settings['multiple_file_behavior'];

      // Prevent 'empty' fields from causing a WSOD.
      $items = array_filter($items);
      $is_wysiwyg_preview = false;
      if(!empty($items[0]['override']['wysiwyg']))
      {
          $is_wysiwyg_preview = true;
      }
      // Build an array of sources for each <video> element.
      $source_lists = array();
      if ($multiple_file_behavior == 'tags') {
        foreach ($items as $delta => $item) {
          if ($item['type'] == 'video' && !in_array($item['filemime'], $blacklist_filenime)) {
            $source_lists[] = array($item);
          }
        }
      }
      else {
        foreach ($items as $delta => $item) {
          if ($item['type'] == 'video'  && !in_array($item['filemime'], $blacklist_filenime)) {
            $source_lists[0][] = $item;
          }
        }
      }

      // Render each source list as an <video> element.
      foreach ($source_lists as $delta => $sources) {
                $width = $settings['width'];
                $height = $settings['height'];
                //der WYSIWYG macht da irgendn schmarrn und was un-bedienbares.
                //deswegen rendern wir darin kein video sondern nur den screenshot
                if ($is_wysiwyg_preview) {
                    $element[$delta] = array(
                        '#theme' => 'section_content_formatter_video_preview',
                        '#files' => $sources,
                        '#is_wysiwyg_preview' => $is_wysiwyg_preview,
                        '#image_width' => $settings['width'] );
                } else {
                    $element[$delta] = array(
                        '#theme' => 'section_content_formatter_video',
                        '#files' => $sources,
                        '#is_wysiwyg_preview' => $is_wysiwyg_preview,
                        '#controls' => $settings['controls'],
                        '#autoplay' => $settings['autoplay'],
                        '#loop' => $settings['loop'],
                        '#muted' => $settings['muted'],
                        '#width' => $width,
                        '#height' => $height,
                        '#classes' => $settings['classes'],
                        '#show_file_link' => $settings['show_file_link']
                    );
                }
            }
    }
  return $element;
}

