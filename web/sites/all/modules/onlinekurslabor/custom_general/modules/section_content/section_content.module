/**
 * gets an array with screenshot-information
 * * width
 * * path
 * * img (image-html-tag)
 * @param String $screenshot_uri URI to screenshot file
 * @param int $image_width requested with in px
 * @param boolean $with_play_button Render a play button on the file.
 * @return array $screenshot_array
 */
function _section_content_get_themed_video_screenshot_array($screenshot_uri, $image_width = null, $with_play_button = true) {
  $return_arr = array();
  $scaling_style = false;
  $playerbutton_image_style = 'media_fakevideo';
  // preview eines videos. passe preview an videosize an.
  if ($image_width) {
    $scaling_style = _section_content_get_image_media_style_for_width($image_width);
  }
  if (!$scaling_style) {
    $scaling_style = image_styles()['media_6'];
  }

  //doppeltes image-styling: 1) passe größe an, 2) erstelle bild
  $image_uri_with_width = image_style_path($scaling_style['name'], $screenshot_uri);
  $image_url_with_width = image_style_url($scaling_style['name'], $screenshot_uri);
  // Create the image.
  image_style_create_derivative($scaling_style, $screenshot_uri, $image_uri_with_width);


  //get dimensions of pic in pixels
  $img_dimensions = _section_content_get_image_style_dimensions($scaling_style['name']);
  $return_arr['width'] = $img_dimensions['width'];

  if ($with_play_button) {
    //3) wende style an, der einen videobutton überlagert
    $return_arr['url'] = image_style_url($playerbutton_image_style, $image_uri_with_width);
    $return_arr['img'] = theme('image_style', array('path' => $image_uri_with_width, 'style_name' => $playerbutton_image_style)); # 'attributes' => array('class' => 'thumb', 'width' => '150', 'height' => '162')));
  }
  else {
    $return_arr['url'] = $image_url_with_width;
    $return_arr['img'] = theme('image', array('path' => $image_uri_with_width, 'width'=>$img_dimensions['width']));
  }
  return $return_arr;
}

/**
 * gets an image style which scales input to $width_in_px  px
 * @param int $width_in_px
 * @return array $style or null
 */
function _section_content_get_image_media_style_for_width($width_in_px) {
    foreach (image_styles() as $imgstyle) {
        foreach ($imgstyle['effects'] as $style_effect) {

            if ($style_effect['name'] == 'image_scale') {
                if($style_effect['data']['width'] == $width_in_px)
                {
                    return $imgstyle;
                }
            }
        }
    }
}

/**
 * gets array [width, height] for images created with named $style
 * @param type $image_style_name e.g. 'media_3'
 * @return type
 * @throws Exception
 */
function _section_content_get_image_style_dimensions($image_style_name)
{
    $style = image_styles()[$image_style_name];
    if(!$style)
    {
        throw new Exception('Style '.$image_style_name.' not found!');
    }
    foreach($style['effects'] as $style_effect)
    {
        if($style_effect['name']=='image_scale')
        {
            return $style_effect['data'];
        }
    }
}
