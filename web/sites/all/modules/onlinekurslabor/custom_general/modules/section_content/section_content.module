/**
 * Entferne contextual links auf print-ansicht
 * Da DS reinhaut, wird die hook-Reihenfolge noch nach hinten geschoben in
 * section_content_module_implements_alter
 * implements hook_contextual_links_view
 * @param type $element
 * @param type $items
 */
function section_content_contextual_links_view_alter(&$element, &$items) {
  #prüfe ob variablen vorhanden
  if (empty($element['#element']['#bundle']) || empty($element['#element']['#view_mode'])) {
    return;
  }

  //hier greift der in section_content_node_view_alter gesetzte view_mode
  if (in_array($element['#element']['#bundle'], array(NM_CONTENT_MULTIPLE_CHOICE, NM_CONTENT_QUESTION_AND_ANSWER)) && $element['#element']['#view_mode'] == 'print') {
    $element['#links'] = array();
  }
}

/**
 * implements hook_module_implements_alter
 * reorder hooks sequence
 * @param type $implementations
 * @param type $hook
*/
function section_content_module_implements_alter(&$implementations, $hook) {

  //make this hook last
  if ($hook == 'contextual_links_view_alter') {
    $hook_in_this_module = $implementations['section_content'];
    unset($implementations['section_content']);
    $implementations['section_content'] = $hook_in_this_module;
  }
}
